@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    body {
        font-family: 'Almarai', sans-serif;
        background-color: #f8f9fa;
        color: #333;
        margin: 0;
        padding: 20px;
    }

    h1, h2, h3 {
        color: #6b42c1;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    .form-floating {
        position: relative;
        margin-bottom: 20px;
    }

        .form-floating input {
            height: 50px;
            padding: 10px;
            border-radius: 8px;
            border: 1px solid #ddd;
        }

        .form-floating label {
            color: #6b42c1;
            font-size: 0.9rem;
            position: absolute;
            top: 10px;
            right: 15px;
            background: #fff;
            padding: 0 5px;
        }

    .btn-primary {
        background-color: #6b42c1;
        border: none;
        color: #fff;
        font-size: 1rem;
        font-weight: bold;
        padding: 12px 20px;
        border-radius: 8px;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background-color: #9441c1;
            transform: scale(1.05);
        }

    .text-danger {
        color: #dc3545 !important;
        font-size: 0.9rem;
    }

    hr {
        border: 1px solid #6b42c1;
        margin: 20px 0;
    }

    section {
        background-color: #f7f7f7;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

        section h3 {
            margin-bottom: 15px;
        }

    a {
        color: #6b42c1;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    .btn {
        padding: 10px 20px;
        margin-top: 10px;
        border-radius: 5px;
    }

    .w-100 {
        width: 100%;
    }
</style>
<div class="container">
    
    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2>إنشاء حساب جديد</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email">البريد الإلكتروني</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password">كلمة المرور</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.ConfirmPassword">تأكيد كلمة المرور</label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">تسجيل</button>
            </form>
        </div>
        <div class="col-md-6">
            <section>
                <h3>استخدم خدمة أخرى للتسجيل</h3>
                <hr />
                @if ((Model.ExternalLogins?.Count ?? 0) == 0)
                {
                    <div>
                        <p>
                            لا توجد خدمات تسجيل دخول خارجية متاحة. يرجى مراجعة <a href="https://go.microsoft.com/fwlink/?LinkID=532715" style="color: #6b42c1;">هذا الرابط</a> لمعرفة المزيد.
                        </p>
                    </div>
                }
                else
                {
                    <form id="external-account" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="form-horizontal">
                        <div>
                            <p>
                                @foreach (var provider in Model.ExternalLogins!)
                                {
                                    <button type="submit" class="btn btn-primary" name="provider" value="@provider.Name" title="تسجيل الدخول باستخدام @provider.DisplayName">@provider.DisplayName</button>
                                }
                            </p>
                        </div>
                    </form>
                }
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
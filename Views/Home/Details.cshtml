@model dynamic
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 text-center">
                <div class="card-body">
                   <div class="product-image-wrapper">
    <img src="@Model.ImagePath" alt="@Model.Name" />
</div>
                    <h3 class="card-title text-mauve fw-bold mb-3">@Model.Name</h3>
                    <p class="card-text text-secondary">@Model.Description</p>
                    <p class="card-text">
                        <span class="text-muted">المدينة: </span> <span class="fw-bold">@Model.CityName</span>
                    </p>
                    <p class="card-text text-mauve fw-bold">
                        <span class="text-muted">السعر: </span> @Model.Price ريال
                    </p>
                    <p class="card-text mt-3">
                        <span class="text-muted d-block fw-bold ">البرنامح:</span>
                        <span >@Model.Details</span>
                    </p>
                    <a href="/Home/Payment/@Model.Id" class="btn btn-mauve mt-3">احجز الآن</a>

                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .text-mauve {
        color: #6a1b9a;
    }

    .btn-mauve {
        background-color: #6a1b9a;
        color: #fff;
        border: none;
    }

        .btn-mauve:hover {
            background-color: #4caf50;
            color: #fff;
        }

    .card {
        border-radius: 15px;
        height: auto;
        padding: 2rem;
    }
    .product-image-wrapper {
        width: 100%;
        height: 280px;          /* ارتفاع ثابت نص الكرت تقريبا */
        margin: 0 auto 20px;
        overflow: hidden;
      
    }

    /* الصورة نفسها */
    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover;      /* الصورة تتناسب بدون تشويه */
        display: block;
    }


</style>
